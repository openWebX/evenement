{
    "name": "openwebx/evenement",
    "description": "Événement is a very simple event dispatching library for PHP",
    "license": "MIT",
    "keywords": [
        "event-dispatcher",
        "event-emitter"
    ],
    "authors": [
        {
            "name": "Igor Wiedler",
            "email": "igor@wiedler.ch"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10 || ^11"
    },
    "autoload": {
        "psr-4": {
            "Evenement\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Evenement\\Tests\\": "tests/"
        },
        "files": [
            "tests/functions.php"
        ]
    }
}
